@model SoloBill.Models.ApplicationUser

<form asp-action="Settings" asp-controller="ApplicationUser" method="post" enctype="multipart/form-data">
<div class="container py-5">
    <div class="row">
        <!-- Sidebar with avatar upload -->
        <div class="col-md-4 text-center">
            <div class="card p-3">
                <img src="@(string.IsNullOrEmpty(Model.LogoPath) ? "/images/default-avatar.png" : "/uploads/" + Model.LogoPath)" 
                     alt="Company Logo" class="rounded-circle mb-3" 
                     style="width: 120px; height: 120px; object-fit: cover;">
                <h5>@User.Identity.Name</h5>
                <small class="text-muted">Freelancer</small>
                <hr>
                <input type="file" name="logoFile" class="form-control mb-2" />
            </div>
        </div>

        <!-- Personal info form -->
        <div class="col-md-8">
            <div class="card p-4">
                <h4>Personal Information</h4>
                <div class="row mt-3">
                    <div class="col-md-6 mb-3">
                        <label>Company Name</label>
                        <input type="text" class="form-control" name="CompanyName" value="@Model.CompanyName">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Email</label>
                        <input type="email" class="form-control" value="@Model.Email" readonly>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Phone</label>
                        <input type="text" class="form-control" name="CompanyPhone" value="@Model.CompanyPhone">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Address</label>
                        <input type="text" class="form-control" name="Address" value="@Model.Address">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Payment Method</label>
                        <input asp-for="BankDetails" class="form-control" />
                    </div>
                    <h5 class="mt-4">Bank Details</h5>
                    <div class="mb-3">
                        <label asp-for="BankName" class="form-label">Bank Name</label>
                        <input asp-for="BankName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="IBAN" class="form-label">IBAN</label>
                        <input asp-for="IBAN" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="BIC" class="form-label">BIC</label>
                        <input asp-for="BIC" class="form-control" />
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/Dashboard" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
</form>