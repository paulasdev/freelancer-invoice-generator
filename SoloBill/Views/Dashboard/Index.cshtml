@model SoloBill.ViewModels.DashboardViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="text-purple">Hello, @User.Identity.Name</h2>
            <p class="text-muted mb-0">Your invoice overview</p>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row g-3 mb-4 text-center">
        <div class="col-6 col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="fw-bold">Total Clients</h5>
                    <h3 class="text-purple mb-0">@Model.TotalClients</h3>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="fw-bold">Invoices Sent</h5>
                    <h3 class="text-purple mb-0">@Model.InvoicesSent</h3>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 mx-auto">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="fw-bold">Unpaid Invoices</h5>
                    <h3 class="text-purple mb-0">@Model.UnpaidInvoices</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Invoices -->
    <div class="card shadow-sm">
        <div class="table-responsive" style="max-height:50vh; overflow:auto;">
            <table class="table table-hover mb-0 table-mobile">
                <thead class="table-light position-sticky top-0" style="z-index:1;">
                    <tr>
                        <th>Invoice No</th>
                        <th>Status</th>
                        <th>Client</th>
                        <th>Download</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentInvoices != null && Model.RecentInvoices.Any())
                    {
                        foreach (var invoice in Model.RecentInvoices)
                        {
                            <tr>
                                <td data-label="Invoice No">@invoice.InvoiceNumber</td>
                                <td data-label="Status">
                                    @if (invoice.Status?.ToLower() == "paid")
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else if (invoice.Status?.ToLower() == "overdue")
                                    {
                                        <span class="badge bg-warning text-dark">Overdue</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@invoice.Status</span>
                                    }
                                </td>
                                <td data-label="Client" class="text-truncate-2">@invoice.ClientName</td>
                                <td data-label="Download" class="text-end">
                                    <a asp-action="ExportToPdf" 
                                       asp-controller="Invoices" 
                                       asp-route-id="@invoice.InvoiceId" 
                                       class="btn btn-outline-primary btn-sm rounded-pill btn-icon">
                                        <i class="bi bi-download"></i>
                                        <span class="d-none d-sm-inline ms-1">Download PDF</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">No recent invoices found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>