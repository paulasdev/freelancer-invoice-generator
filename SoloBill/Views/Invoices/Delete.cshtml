@model Invoice

@{
    ViewData["Title"] = "Delete Invoice";
}

<div class="container-fluid">
    <div class="row">
       
        <!-- Main Content -->
        <main class="col-md-9 bg-light p-4">
            <h2 class="fw-bold mb-4 text-danger">Delete Invoice</h2>

            <!-- Summary Info Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-1"><strong>Date:</strong> @Model.IssueDate.ToShortDateString()</p>
                        <p class="mb-1"><strong>Invoice #:</strong> @Model.InvoiceId</p>
                        <p class="mb-1"><strong>Customer:</strong> @Model.Client?.Name</p>
                    </div>
                    <div class="text-end">
                        <h5><strong>Total:</strong> â‚¬@Model.Amount.ToString("0.00")</h5>
                    </div>
                </div>
            </div>

            <p class="mb-4">Are you sure you want to delete this invoice? This action cannot be undone.</p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="InvoiceId" />
                <div class="d-flex justify-content-between">
                    <a href="/Invoices" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </div>
            </form>
        </main>
    </div>
</div>