@model SoloBill.Models.Invoice
@{
    ViewData["Title"] = $"Invoice #{Model.InvoiceNumber ?? Model.InvoiceId.ToString()}";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0">Invoice <span class="text-muted">#@(Model.InvoiceNumber ?? Model.InvoiceId.ToString())</span></h2>
            <small class="text-secondary">
                Issued: <strong>@Model.IssueDate.ToString("dd MMM yyyy")</strong> &middot;
                Due: <strong>@Model.DueDate.ToString("dd MMM yyyy")</strong>
            </small>
        </div>

        <div class="d-flex gap-2">
            <a asp-controller="Invoices" asp-action="Edit" asp-route-id="@Model.InvoiceId" class="btn btn-outline-secondary rounded-pill">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
            @if (Model.InvoiceId > 0)
            {
                <a asp-controller="Invoices" asp-action="ExportToPdf" asp-route-id="@Model.InvoiceId" class="btn btn-outline-primary rounded-pill">
                    <i class="bi bi-download me-1"></i> Download PDF
                </a>
            }
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-7">
                            <h6 class="text-uppercase text-muted fw-semibold mb-2">Bill To</h6>
                            <p class="mb-1 fw-semibold">@Model.Client?.Name</p>
                            @if (!string.IsNullOrWhiteSpace(Model.Client?.Company))
                            {
                                <p class="mb-1">@Model.Client.Company</p>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Client?.Address))
                            {
                                <p class="mb-1">@Model.Client.Address</p>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Client?.Email))
                            {
                                <p class="mb-0"><a href="mailto:@Model.Client.Email">@Model.Client.Email</a></p>
                            }
                        </div>
                        <div class="col-md-5 text-md-end mt-3 mt-md-0">
                            <h6 class="text-uppercase text-muted fw-semibold mb-2">Status</h6>
                            @if (Model.IsPaid)
                            {
                                <span class="badge bg-success px-3 py-2">Paid</span>
                            }
                            else if (Model.DueDate.Date < DateTime.UtcNow.Date)
                            {
                                <span class="badge bg-warning text-dark px-3 py-2">Overdue</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary px-3 py-2">Unpaid</span>
                            }

                            <div class="mt-3">
                                <div class="small text-muted">Invoice ID</div>
                                <div class="fw-semibold">#@(Model.InvoiceNumber ?? Model.InvoiceId.ToString())</div>
                            </div>
                        </div>
                    </div>

                    @* Optional notes *@
                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <div class="mt-4">
                            <h6 class="text-uppercase text-muted fw-semibold mb-2">Notes</h6>
                            <div class="p-3 bg-light rounded">@Model.Notes</div>
                        </div>
                    }
                </div>
            </div>

            @* Items table if Items are loaded *@
            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="card shadow-sm mt-4">
                    <div class="card-body">
                        <h6 class="text-uppercase text-muted fw-semibold mb-3">Items</h6>
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Description</th>
                                        <th class="text-end">Qty</th>
                                        <th class="text-end">Rate</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var it in Model.Items)
                                    {
                                        var line = it.Quantity * it.UnitPrice;
                                        <tr>
                                            <td>@it.Description</td>
                                            <td class="text-end">@it.Quantity</td>
                                            <td class="text-end">€@it.UnitPrice.ToString("N2")</td>
                                            <td class="text-end">€@line.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-muted">Subtotal</span>
                        <span>€@Model.Items?.Sum(i => i.Quantity * i.UnitPrice).ToString("N2")</span>
                    </div>
                    <hr class="my-2" />
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold">Total</span>
                        <span class="fs-5 fw-bold">€@Model.Amount.ToString("N2")</span>
                    </div>
                </div>
            </div>

            <a asp-controller="Invoices" asp-action="Index" class="btn btn-outline-primary w-100 mt-3">
                ← Back to Invoices
            </a>
        </div>
    </div>
</div>