@model Invoice

<div class="container-fluid">
    <div class="row">

        <!-- Main Content -->
        <main class="col-md-9 bg-light p-4">
            <h2 class="fw-bold mb-4">Edit Invoice</h2>

            <!-- Extra Info -->
            <div class="mb-4 p-3 bg-white shadow-sm rounded">
                <p><strong>Date:</strong> @Model.IssueDate.ToShortDateString()</p>
                <p><strong>Invoice Number:</strong> @Model.InvoiceNumber</p>
                <p><strong>Customer:</strong> @Model.Client?.Company</p>
                <p><strong>Total:</strong> â‚¬@Model.Amount.ToString("0.00")</p>
            </div>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="InvoiceId" />

                <div class="mb-3">
                    <label class="form-label">Company</label>
                    <select asp-for="ClientId" asp-items="ViewBag.ClientId" class="form-select"></select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Issue Date</label>
                    <input asp-for="IssueDate" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Due Date</label>
                    <input asp-for="DueDate" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Amount</label>
                    <input asp-for="Amount" class="form-control" />
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsPaid" />
                    <label class="form-check-label">Is Paid</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/Invoices" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </main>
    </div>
</div>