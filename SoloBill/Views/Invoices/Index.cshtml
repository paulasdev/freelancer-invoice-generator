@model IEnumerable<Invoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Client.Company)
            </th>
            <th>
                Issue Date
            </th>
            <th>
                Due Date
            </th>
            <th>
                Amount
            </th>
            <th>
                Is Paid
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Client.Company</td>
            <td>@item.IssueDate.ToString("dd/MM/yyyy")</td>
            <td>@item.DueDate.ToString("dd/MM/yyyy")</td>
            <td>@item.Amount.ToString("C", new System.Globalization.CultureInfo("en-IE"))</td>
            <td>@(item.IsPaid ? "✅" : "❌")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InvoiceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InvoiceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InvoiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
