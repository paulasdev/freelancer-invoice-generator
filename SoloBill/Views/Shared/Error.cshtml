@model SoloBill.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <h1 class="text-danger mb-2">Something went wrong</h1>
    <p class="text-muted mb-4">An error occurred while processing your request.</p>

    @if (Model?.ShowRequestId == true && !string.IsNullOrWhiteSpace(Model.RequestId))
    {
        <p class="small text-secondary">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go home</a>
</div>