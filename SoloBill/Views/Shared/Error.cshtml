@{
    Layout = null;                       
    Response.StatusCode = Response.StatusCode == 200 ? 500 : Response.StatusCode;
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Something went wrong</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="mx-auto" style="max-width:680px;">
      <h1 class="fw-bold mb-2">Something went wrong</h1>
      <p class="text-muted mb-4">Please try again. If the problem persists, contact support.</p>
      <div class="d-flex gap-2">
        <a class="btn btn-primary" href="/">Go home</a>
        <button class="btn btn-outline-secondary" onclick="location.reload()">Reload</button>
      </div>
    </div>
  </div>
</body>
</html>