@page
@model RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Register | SoloBill</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap + Fonts -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter&family=Poppins:wght@500;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f2f3f5;
        }

        .register-container {
            min-height: 100vh;
        }

        .left-panel {
            background-color: #ffffff;
            padding: 3rem;
        }

        .right-panel {
            background-color: #014A59;
            color: white;
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-control:focus {
            box-shadow: none;
        }

        .brand {
            font-weight: bold;
            font-size: 1.5rem;
        }
    </style>
</head>
<body>

<div class="container-fluid register-container d-flex">
    <div class="col-md-6 left-panel">
        <div class="brand mb-4">SoloBill</div>
        <h3 class="mb-4">Create an account</h3>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-dark w-100">Sign Up</button>
        </form>

        <div class="text-center my-4 position-relative">
             <hr class="my-0" />
            <span style="position: absolute; top: -0.75rem; left: 50%; transform: translateX(-50%); background: #fff; padding: 0 1rem; font-size: 0.9rem; color: #6c757d;">
              or
             </span>
</div>

        <div class="d-flex justify-content-center gap-2">
            <button class="btn btn-outline-secondary">Google</button>
            <button class="btn btn-outline-secondary">Facebook</button>
        </div>

        <div class="text-center mt-4">
            Already have an account? <a href="/Identity/Account/Login">Log in</a>
        </div>
    </div>

    <div class="col-md-6 right-panel text-center">
        <h4>Very simple way you can engage</h4>
        <p class="mt-2">Welcome to SoloBill – Track and manage your freelance invoices with ease.</p>
    </div>
</div>

</body>
</html>
