@page
@model RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Register | SoloBill</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap + Fonts -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter&family=Poppins:wght@500;700&display=swap" rel="stylesheet" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f2f3f5;
        }

        .register-container {
            min-height: 100vh;
        }

        .left-panel {
            background-color: #ffffff;
            padding: 3rem;
        }

        .right-panel {
            background-color: #8a3ffc;
            color: white;
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-control:focus {
            box-shadow: none;
        }

        .brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

          .features {
            padding: 60px 20px;
        }
        .features h3 {
            font-weight: 600;
            }
    </style>
</head>
<body>

<div class="container-fluid register-container d-flex">
    
    <div class="col-md-6 left-panel">
            <a class="navbar-brand d-inline-flex align-items-center" href="/">
    <img src="~/images/solobill-logo.png" alt="SoloBill Logo" style="height: 40px;" class="me-2" />
    <span class="fw-bold text-dark" style="font-size: 1.5rem;"></span>
</a>    
        <h3 class="mb-4">Create an account</h3>
        <form method="post">
    <input type="hidden" name="returnUrl" value="/Dashboard" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
     
            <button type="submit" class="btn btn-dark w-100">Sign Up</button>
        </form>

        <div class="text-center my-4 position-relative">
             <hr class="my-0" />
            <span style="position: absolute; top: -0.75rem; left: 50%; transform: translateX(-50%); background: #fff; padding: 0 1rem; font-size: 0.9rem; color: #6c757d;">
              or
             </span>
</div>

        <div class="d-flex justify-content-center gap-2">
            <button class="btn btn-outline-secondary">Google</button>
            <button class="btn btn-outline-secondary">Facebook</button>
        </div>

        <div class="text-center mt-4">
            Already have an account? <a href="/Identity/Account/Login">Log in</a>
        </div>
    </div>

    <div class="col-md-6 right-panel features container text-center">
        <div class="row">
            <div class="col-md-4">
                <h3>🚀 Quick Setup</h3>
                <p>Sign up and start creating invoices in minutes.</p>
            </div>
            <div class="col-md-4">
                <h3>📊 Dashboard</h3>
                <p>View recent activity, unpaid invoices, and more.</p>
            </div>
            <div class="col-md-4">
                <h3>🔐 Secure</h3>
                <p>Your data is safe and protected with SSL security.</p>
            </div>
        </div>

    </div>
</div>

</body>
</html>
