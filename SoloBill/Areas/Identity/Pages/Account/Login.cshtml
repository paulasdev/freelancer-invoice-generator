@page
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login | SoloBill</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap, Bootstrap Icons & Google Fonts -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@600;700&display=swap" rel="stylesheet" />

    <style>
        :root{
            --brand:#8a3ffc;
            --ink:#111827;
            --muted:#6b7280;
            --bg:#f3f4f6;
        }
        html,body{height:100%;}
        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg);
            color: var(--ink);
        }

        .login-wrap{
            min-height:100%;
            display:flex;
        }

        /* left (form) */
        .left-panel{
            background:#fff;
            padding: min(5vw, 4rem);
            display:flex;
            flex-direction:column;
            gap:1.25rem;
            box-shadow: 0 0 0 1px rgba(17,24,39,.04);
        }
        .brand-lockup img{height:40px;}
        .brand-lockup span{
            font-family:'Poppins', sans-serif;
            font-weight:700;
            letter-spacing:.2px;
            font-size:1.25rem;
        }

        .card-lite{
            border: 1px solid rgba(17,24,39,.06);
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(17,24,39,.06);
        }

        .form-label{font-weight:600;}
        .form-control{
            border-radius:12px;
            padding:.75rem .9rem;
        }
        .form-control:focus{
            box-shadow:0 0 0 .25rem rgba(138,63,252,.15);
            border-color: var(--brand);
        }

    .btn-brand{
    background:var(--brand);
    color:#fff;
    border:none;
    border-radius:999px;
    height:48px;
    font-weight:600;
  }
  .btn-brand:hover{
    border: 1px solid #fff;
    filter:brightness(.95);
    }
  .btn-brand:focus{box-shadow:0 0 0 .25rem rgba(138,63,252,.35)}

  /* secondary actions */
.btn-demo {
  border-radius: 999px;
  height: 48px;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}


/* demo button */
.btn-demo {
  background: #fff;
  color: var(--brand);
  border: 1px solid var(--brand);
  padding: .75rem 1rem;
  transition: all .2s ease-in-out;
text-decoration: none;
}
.btn-demo:hover {
  background: var(--brand);
  color: #fff;
  text-decoration: none;
}


        .divider{
            position:relative;
            text-align:center;
            margin: 1.25rem 0;
        }
        .divider hr{
            margin:0;
            opacity:.25;
        }
        .divider span{
            position:absolute;
            inset-inline-start:50%;
            transform:translateX(-50%);
            top:-.7rem;
            background:#fff;
            padding: 0 .75rem;
            color: var(--muted);
            font-size:.9rem;
        }

        /* right (hero) */
        .right-panel{
            background: radial-gradient(1200px 1200px at 20% -10%, #b693ff 0%, rgba(182,147,255,0) 40%),
                        linear-gradient(135deg, #6622ff 0%, #8a3ffc 45%, #b693ff 100%);
            color:#fff;
            padding: min(6vw, 4rem);
            display:flex;
            flex-direction:column;
            justify-content:center;
        }
        .hero-wrap{
            max-width:520px;
            margin-inline:auto;
            text-align:center;
        }
        .hero-eyebrow{
            display:inline-flex;
            align-items:center;
            gap:.5rem;
            background: rgba(255,255,255,.12);
            padding:.35rem .75rem;
            border-radius:999px;
            font-weight:600;
            letter-spacing:.2px;
        }
        .hero-title{
            font-family:'Poppins', sans-serif;
            font-weight:700;
            margin-top:1rem;
            margin-bottom:.5rem;
        }
        .hero-copy{opacity:.95;}

        @@media (max-width: 991.98px){
            .right-panel{display:none; }
        }
    </style>
</head>
<body>

<div class="container-fluid login-wrap">
    <!-- LEFT: form -->
    <div class="col-lg-6 col-12 left-panel">
        <div class="d-flex align-items-center justify-content-between">
            <a class="brand-lockup d-inline-flex align-items-center gap-2 text-decoration-none" href="/">
                <img src="~/images/solobill-logo.png" alt="SoloBill" />
            </a>
            <a class="text-decoration-none" href="/Identity/Account/Register">New here? <strong>Sign up</strong></a>
        </div>

        <div class="mt-2">
            <h2 class="fw-bold mb-1">Welcome back</h2>
            <div class="text-secondary">Sign in to continue to your dashboard</div>
        </div>

        <div class="card-lite p-4 mt-3">
            <form method="post">
                <input type="hidden" name="returnUrl" value="/Dashboard" />
                <div asp-validation-summary="All" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" type="email" autocomplete="email" placeholder="you@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="form-check">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                    </div>
                    <a class="small" href="/Identity/Account/ForgotPassword">Forgot password?</a>
                </div>

                <button type="submit" class="btn btn-brand w-100">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Log In
                </button>
            </form>

            <div class="divider">
                <hr />
                <span>or</span>
            </div>

            <div class="d-grid gap-2">
                <!-- Demo Login -->
<a class="btn-demo" href="/Home/DemoLogin">
  <i class="bi bi-stars me-2"></i> Try Demo
</a>
            </div>
        </div>

        <div class="text-center text-secondary mt-3 small">
            By continuing you agree to the <a href="/Home/Privacy">Privacy Policy</a>.
        </div>
    </div>

    <!-- RIGHT: hero -->
    <div class="col-lg-6 right-panel">
        <div class="hero-wrap">
            <span class="hero-eyebrow">
                <i class="bi bi-lightning-charge-fill"></i>
                Faster invoicing
            </span>
            <h1 class="hero-title display-5">
    Invoice smarter.<br>Get paid faster.
</h1>
            <p class="hero-copy lead">
                SoloBill helps freelancers create beautiful invoices, track payments,
                and manage clients all in one clean dashboard.
            </p>

            <div class="row g-3 mt-3">
                <div class="col-6">
                    <div class="p-3 rounded-4" style="background: rgba(255,255,255,.12);">
                        <div class="fw-semibold"><i class="bi bi-graph-up-arrow me-1"></i> Insights</div>
                        <div class="opacity-75 small">See overdue and unpaid totals at a glance.</div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="p-3 rounded-4" style="background: rgba(255,255,255,.12);">
                        <div class="fw-semibold"><i class="bi bi-filetype-pdf me-1"></i> PDF Export</div>
                        <div class="opacity-75 small">Share polished invoices in one click.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>